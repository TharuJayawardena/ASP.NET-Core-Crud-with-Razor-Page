@page
@model BulkyBook.Pages.Categories.EditModel

<form method="post">
    <input hidden asp-for="Catergory.Id"/>
    <div class="broder p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
      <div class="mb-3">
          <label asp-for="Catergory.Name"></label>
          <input asp-for="@Model.Catergory.Name" class="form-control"/>
          <span asp-validation-for="Catergory.Name" class="text-danger"></span>
      </div>
        <div class="mb-3">
            <label asp-for="Catergory.DisplayOrder"></label>
            <input asp-for="@Model.Catergory.DisplayOrder" class="form-control" />
            <span asp-validation-for="Catergory.DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}