@page
@model BulkyBook.Pages.Categories.DeleteModel

<form method="post">
    <input hidden asp-for="Catergory.Id"/>
    <div class="broder p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Category</h2>
            <hr />
        </div>
      <div class="mb-3">
          <label asp-for="Catergory.Name"></label>
          <input asp-for="Catergory.Name" disabled class="form-control"/>       
      </div>
        <div class="mb-3">
            <label asp-for="Catergory.DisplayOrder"></label>
            <input asp-for="Catergory.DisplayOrder" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}